let mes = 1; 

// Usar un switch-case para mostrar la cantidad de días del mes
switch (mes) {
    case 1:  // Enero
    case 3:  // Marzo
    case 5:  // Mayo
    case 7:  // Julio
    case 8:  // Agosto
    case 10: // Octubre
    case 12: // Diciembre
        console.log("Este mes tiene 31 días.");
        break;
    case 4:  // Abril
    case 6:  // Junio
    case 9:  // Septiembre
    case 11: // Noviembre
        console.log("Este mes tiene 30 días.");
        break;
    case 2:  // Febrero
        console.log("Este mes tiene 28 días.");
        break;
    default:
        console.log("Número de mes no válido.");
}
